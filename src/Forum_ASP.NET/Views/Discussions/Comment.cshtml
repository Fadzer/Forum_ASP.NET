@model IEnumerable<Forum_ASP.NET.Models.Comment>


@{
    ViewBag.Title = "Comments";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-default" onclick="location.href='@Url.Action("CreateComment", "Discussions")'">New Comment</a>
</p>

<table class="table">
    <tr>
        <th>Author</th>
        <th>Comment</th>
        <th>Date</th>
    </tr>

    @foreach (var item in Model)
    {
        var id = 0;
        <tr>
            <td>
                <!--Html.DisplayFor(modelItem => item.DiscussionId.Equals(id))-->
                @Html.DisplayFor(modelItem => item.CommentAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentDate)
            </td>
        </tr>
    }

</table>