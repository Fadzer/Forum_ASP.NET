@model IEnumerable<Forum_ASP.NET.Models.Discussion>
@{
    ViewBag.Title = "Discussions";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-default" onclick="location.href='@Url.Action("Create", "Discussions")'">New Discussion</a>
</p>

<table class="table">
    <tr>
        <th></th>
        <th>Name</th>
        <th>Author</th>
        <th>Last Date</th>
        <th>Creating Date</th>
        <th>id</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr> <!--class="link" onclick="location.href='atUrl.Action("Comment", "Discussions")'">-->
            <td>
                <a asp-action="Comment" asp-controller="Discussions" asp-route-id="@item.DiscussionId">Test</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscussionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscussionId)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Discussions" asp-route-id="@item.DiscussionId">Edit</a>
            </td>
        </tr>
    }
</table>